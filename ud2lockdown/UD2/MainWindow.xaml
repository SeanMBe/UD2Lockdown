<Window x:Class="UD2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UD2" Height="350" Width="525">
    <StackPanel >
        <Button Command="{Binding GetCustomerCommand}" AutomationProperties.AutomationId="get_customer_button">Get Customer</Button>
        <TextBlock>Customer Id:</TextBlock>
        <TextBox Text="{Binding CustomerId}" AutomationProperties.AutomationId="customer_id_textbox"></TextBox>
        <TextBlock>Customer Get Result:</TextBlock>
        <TextBox Text="{Binding CustomerGetResult}" AutomationProperties.AutomationId="customer_result_textbox"></TextBox>
    </StackPanel>
</Window>
